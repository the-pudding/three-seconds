#intro
	h1
		padding 5%
		font-weight 900
		font-size 3.25em
		line-height 1
		text-transform uppercase
		text-align center
		position absolute
		top 40%
		transform translateY(-50%)
		left 0
		width 100%
		opacity 1
		-webkit-text-stroke-color $white
		letter-spacing 0.025em
		em
			background-color transparent
			-webkit-text-stroke-color $fg
		span:nth-child(1)
			color $primary
		span:nth-child(2)
			color $white
		span:nth-child(3)
			color $secondary
	
