#intro
	h1
		font-family $sans-display
		position absolute
		top 50%
		left 5%
		width 95%
		font-weight 400
		font-size 2.8em
		line-height 1.1
		text-transform uppercase
		opacity 1
		letter-spacing 0.025em
		color $bg
		em
			color $white

	.intro__title--1
		transform translateY(-195%)
	
	.intro__title--2
		transform translateY(-50%)
		left -100%
	
	.intro__title--3
		transform translateY(195%)
		
	
	.byline
		position absolute
		left 0
		bottom 12%
		padding 0 5%
		width 90%
		font-weight 600
		letter-spacing 0.01em
		color $white
		font-size 1em
		span
			display inline-block
			font-weight 400

	.intertitle
		opacity 0
	
	.logo
		position absolute
		bottom 4%
		right 7%
		width 10%
		opacity 0
		svg
			width 100%
			path
				fill $bg-invert

		#leftP
			path
				fill-opacity 0.5
		
		
	#court
		height 100%
		width auto
		transform translateX($stroke-width * -1)
		path
			stroke-width $stroke-width
		#three
			fill $primary
		#key
			fill $secondary
		#paint
			fill $tertiary

.is-square #intro
	h1
		font-size 1.4em
		
	.intro__title--1
		transform translateY(-215%)
	
	.intro__title--2
		transform translateY(-50%)
		left -100%
	
	.intro__title--3
		transform translateY(220%)

	.byline
		left 51.5%
		bottom 25.5%
		width 90%
		color $bg-invert
		font-size 0.7em