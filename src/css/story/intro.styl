#intro
	h1
		position absolute
		top 50%
		left 0
		width 100%
		padding 5%
		font-weight 900
		font-size 3.25em
		line-height 1
		text-transform uppercase
		// text-align center
		transform translateY(-50%)
		opacity 1
		-webkit-text-stroke-color $white
		-webkit-text-stroke-width 0.025em
		letter-spacing 0.025em
		em
			background-color transparent
			-webkit-text-stroke-color $fg
		span:nth-child(1)
			color $primary
		span:nth-child(2)
			color $white
		span:nth-child(3)
			color $secondary
	
	.byline
		position absolute
		left 0
		bottom 0
		padding 5% 0 5% 5%
		width 90%
		// text-align center
		font-weight 900
		letter-spacing 0.01em
		color $secondary
		font-size 1em
		// text-transform uppercase
		
	.intertitle
		opacity 0
