/* CUSTOM STORY STYLE */
body
	background-color $white
	font-family $sans

	
main
	position relative
	overflow hidden
	background-color $bg

section
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
		
figure
	position absolute
	top 50%
	left 0
	opacity 0
	transform translateY(-50%)

svg
	display block
	width 100%
	height 100%

svg text
	font-family $sans-display
	font-weight 400
	text-transform uppercase
	fill $bg-invert

em
	color $white

cite
	display block
	position absolute
	width 100%
	bottom 2.5%
	left 0
	line-height 1.2
	margin 0
	padding 0 5%
	font-weight 700
	color $fg
	font-size 0.5em
	opacity 0

.intertitle
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color $primary
	z-index set-index(overlay)
	p	
		color $white
		font-weight 400
		font-size 2em
		line-height 1.15
		position absolute
		width 100%
		top 50%
		transform translateY(-50%)
		padding 0 10%

	span
		opacity 0
		display inline-block

	strong
		visibility hidden
		margin-bottom 0.5em
		display block		

	em
		display block
		background-color $tertiary
		font-size 1.5em
		font-family $sans-display
		text-transform uppercase
		margin-bottom 0.15em
		padding 0.15em
		line-height 1
		&.above
			margin-top 0.5em

	
.flipbook__overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background url(assets/images/overlay4.png)
	opacity 0.5

.tick
	font-weight 400
	color $secondary
	font-size 3.2em
	line-height 1
	font-family $sans-display
	text-transform uppercase
	span
		display block
		font-size 0.2em
		font-family $sans
		font-weight 600
		margin-top 0.5em
		color $bg-invert