/* CUSTOM STORY STYLE */
body
	background-color $white
	font-family $sans-display

	
main
	position relative
	overflow hidden
	background-color $bg

section
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
		
figure
	position absolute
	top 50%
	left 0
	opacity 0
	transform translateY(-50%)

svg
	display block
	width 100%
	height 100%

svg text
	font-family $sans-display
	font-weight 700
	text-transform uppercase
	fill $bg-invert

em
	color $white
	// padding 0 0.25em
	// -webkit-text-stroke-color $fg
	// -webkit-text-stroke-width 1px
	// letter-spacing 0.01em

cite
	display block
	position absolute
	width 100%
	bottom 2.5%
	left 0
	line-height 1.2
	margin 0
	padding 0 5%
	font-weight 700
	color $fg
	font-size 0.5em
	opacity 0

.intertitle
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color $primary
	z-index set-index(overlay)
	p	
		color $bg
		font-weight 900
		font-size 2em
		line-height 1
		letter-spacing 0.01em
		position absolute
		width 100%
		top 50%
		transform translateY(-50%)
		padding 0 5%
		// text-align center
		-webkit-text-stroke-color $fg

	span
		opacity 0
		display inline-block
	
.flipbook__overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background url(assets/images/bg-pattern-dark.png)
	opacity 0.1