#refresher
	figure
		width 100%
		height 100%
		transform translate(0,0)
		top 0
		left 0
		opacity 1
	
	svg
		width 90%
		height 100%
		margin 0 auto
		
	
	path
		stroke $fg

	.tick	
		position absolute
		left 0
		top 70%
		width 100%
		opacity 0
		text-align center
		font-weight 900
		letter-spacing 0.01em
		color $secondary
		font-size 1.25em
		text-transform uppercase
		line-height 1.6

	
	#paint_1_
		fill $primary
		fill-opacity 0