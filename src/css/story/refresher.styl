#refresher
	figure
		width 100%
		height 100%
		transform translate(0,0)
		top 0
		left 0
		opacity 1
	
	svg
		width 90%
		height 100%
		margin 0 auto
		
	
	path
		stroke $fg
		stroke-width $stroke-width

	.tick	
		position absolute
		left 0
		top 70%
		width 100%
		opacity 0
		text-align center

	
	#paint_1_
		fill $tertiary
		fill-opacity 0