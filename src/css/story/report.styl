#report
	figure
		display flex
		flex-wrap wrap
		align-items flex-start
		align-content space-around
		justify-content flex-start
		width 90%
		margin-left 5%
		img
			width calc(100% / 7)
			height auto
			border 0.1em solid $bg
			display block
			opacity 0

	.flipbook
		position absolute
		overflow hidden
		visibility hidden
		transform-origin 50% 50%
		&.is-visible
			visibility visible
		img
			width 100%
		
	#flipbook-l2m
		img
			transform-origin 50% 100%
			transform scale(1)
			border 0.1em solid transparent
			height 100%
	
	#flipbook-spike
		visibility hidden
		left 50%
		transform translate(-50%, 50%)
		border 0.25em solid $white
		&.is-visible
			visibility visible

.is-square #report
	figure
		img
			width calc(100% / 9)